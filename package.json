{
  "name": "lioncity-tutors-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:website": "npm run dev --workspace=apps/website",
    "dev:bot": "npm run start --workspace=apps/telegram-bot",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:website\"",
    "install:all": "npm install",
    "build": "npm run build --workspace=apps/website",
    "start:backend": "npm run start --workspace=apps/backend"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/webidl-conversions": "^7.0.3",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "embla-carousel-auto-scroll": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "gsap": "^3.13.0",
    "lenis": "^1.3.11",
    "split-type": "^0.3.4"
  }
}
